<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>

  <!-- Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #f8f3e7, #f2ecdd);
      color: #4a4a4a;
      position: relative;
      overflow: hidden;
    }

    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: radial-gradient(circle at 20% 50%, rgba(221, 182, 110, 0.15) 0%, transparent 50%),
                  radial-gradient(circle at 80% 80%, rgba(240, 200, 140, 0.15) 0%, transparent 50%);
      pointer-events: none;
      z-index: 0;
    }

    .auth-container {
      position: relative;
      z-index: 1;
      width: 100%;
      max-width: 420px;
      padding: 20px;
    }

    .auth-card {
      width: 100%;
      background: rgba(255, 255, 255, 0.75);
      backdrop-filter: blur(12px);
      border-radius: 20px;
      padding: 40px 35px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      border: 1px solid rgba(255, 255, 255, 0.9);
    }

    .auth-title {
      text-align: center;
      font-size: 2.2rem;
      font-weight: 700;
      margin-bottom: 10px;
      background: linear-gradient(135deg, #d4a657, #e6c78b);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .auth-subtitle {
      text-align: center;
      font-size: 14px;
      color: #777;
      margin-bottom: 30px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      font-size: 14px;
      font-weight: 500;
      margin-bottom: 6px;
      color: #555;
    }

    .form-group input {
      width: 100%;
      padding: 12px 14px;
      border-radius: 10px;
      border: 1px solid #ddd;
      font-size: 14px;
      outline: none;
      transition: 0.3s;
      font-family: 'Poppins', sans-serif;
    }

    .form-group input:focus {
      border-color: #d4a657;
      box-shadow: 0 0 0 2px rgba(212, 166, 87, 0.25);
    }

    .auth-btn {
      width: 100%;
      padding: 14px;
      margin-top: 10px;
      border: none;
      border-radius: 12px;
      background: linear-gradient(135deg, #d4a657, #e6c78b);
      color: white;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: 0.3s;
      font-family: 'Poppins', sans-serif;
    }

    .auth-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(212, 166, 87, 0.35);
    }

    .auth-btn:active {
      transform: translateY(0);
    }

    .auth-footer {
      margin-top: 25px;
      text-align: center;
      font-size: 14px;
      color: #666;
    }

    .auth-footer a {
      color: #d4a657;
      font-weight: 500;
      text-decoration: none;
    }

    .auth-footer a:hover {
      text-decoration: underline;
    }

    .alert {
      padding: 12px 14px;
      border-radius: 10px;
      margin-bottom: 15px;
      font-size: 14px;
      display: none;
    }

    .alert-danger {
      background: rgba(220, 53, 69, 0.2);
      color: #721c24;
      border: 1px solid rgba(220, 53, 69, 0.3);
    }

    .alert-success {
      background: rgba(40, 167, 69, 0.2);
      color: #155724;
      border: 1px solid rgba(40, 167, 69, 0.3);
    }

  </style>
</head>
<body>

  <div class="auth-container">
    <div class="auth-card">
      <h1 class="auth-title">Welcome Back</h1>
      <p class="auth-subtitle">Login to your account</p>

      <div class="alert alert-danger" id="errorAlert"></div>

      <!-- LOGIN FORM -->
      <form id="loginForm" onsubmit="return false;">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter your email" required />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password" required />
        </div>

        <button type="button" class="auth-btn" id="submit">Login</button>
      </form>

      <div class="auth-footer">
        Don't have an account? <a href="/register">Register</a>
      </div>
    </div>
  </div>

  <script>
    $(document).ready(function() {
      $('#submit').click(function() {
        const errorAlert = $('#errorAlert');
        errorAlert.hide();

        const email = $('#email').val().trim();
        const password = $('#password').val();

        if (!email || !password) {
          errorAlert.text('Email and Password are required').show();
          return;
        }

        const data = {
          email: email,
          password: password
        };

        $.ajax({
          type: 'POST',
          url: '/api/v1/user/login',
          contentType: 'application/json',
          dataType: 'json',
          data: JSON.stringify(data),
          success: function(serverResponse) {
            // Redirect to dashboard - backend will handle role-based routing
            setTimeout(function() {
              window.location.href = '/dashboard';
            }, 500);
          },
          error: function(errorResponse) {
            try {
              const errorData = errorResponse.responseJSON || JSON.parse(errorResponse.responseText);
              errorAlert.text(errorData.error || 'Login failed').show();
            } catch (e) {
              errorAlert.text(errorResponse.responseText || 'Unknown error occurred').show();
            }
          }
        });
      });
    });
  </script>

</body>
</html>
